<h1>Listing products</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Image</th>
    <th>Video</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.category_id %></td>
    <td><%= product.description %></td>
    <td><%= product.image %></td>
    <td><%= product.video %></td>
    <td><%= link_to 'Show', category_product_path(@category, product) %></td>
    <td><%= link_to 'Edit', edit_category_product_path(@category, product) %></td>
    <td><%= link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_category_product_path(@category) %>
